<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.wakemeuphere.AlarmForm">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:text="@string/alarm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_title_label"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="@string/alarm_title"
                android:id="@+id/alarm_title"/>

        <TextView
                android:text="@string/alarm_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_distance_label"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="@string/alarm_distance"
                android:id="@+id/alarm_distance"/>

        <TextView
                android:text="@string/alarm_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_music_label"/>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_music"/>

        <TextView
                android:text="@string/alarm_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_position_label"/>

        <TextView
                android:text="@string/alarm_position"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_position"
                android:textSize="18sp"
                android:paddingLeft="5dp" />

        <Space
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Save"
                android:textColor="#fff" android:onClick="onButtonSaveClicked"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Delete"
                android:textColor="#fff" android:onClick="onButtonDeleteClicked"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Back"
                android:textColor="#fff" android:onClick="onButtonCancelClicked"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
