<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"

            android:layout_height="280dp"
            android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.fragments.AlarmFormFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout2">

        <TextView
                android:text="@string/alarm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_title_label"/>

        <EditText
                android:id="@+id/alarm_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="@string/alarm_title" android:singleLine="true"/>

        <TextView
                android:text="@string/alarm_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_distance_label"/>

        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_distance_value"
                android:inputType="numberDecimal"
                android:max="10000"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="0"
                android:id="@+id/alarm_distance"/>

        <TextView
                android:text="@string/alarm_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_music_label"/>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_music"/>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Play"
                android:textColor="#fff"
                android:id="@+id/alarm_button_music"

                android:onClick="onButtonDoMusic"

                />

        <TextView
                android:text="@string/alarm_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_position_label"/>

        <TextView
                android:text="@string/alarm_position"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_position"
                android:textSize="18sp"
                android:paddingLeft="5dp"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>