<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        tools:context=".ui.form.FormFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout2">

        <TextView
                android:text="@string/alarm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_title_label"/>

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="@string/alarm_title"
                android:id="@+id/alarm_title"/>

        <TextView
                android:text="@string/alarm_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_distance_label"/>

        <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_distance_value"
                android:inputType="numberDecimal"
                android:max="10000"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="0"
                android:id="@+id/alarm_distance"/>

        <TextView
                android:text="@string/alarm_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_music_label"/>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_music"/>


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Play"
                android:textColor="#fff"
                android:id="@+id/alarm_button_music"

                android:onClick="onButtonDoMusic"

                />

        <TextView
                android:text="@string/alarm_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_position_label"/>

        <TextView
                android:text="@string/alarm_position"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alarm_position"
                android:textSize="18sp"
                android:paddingLeft="5dp"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:id="@+id/linearLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Cancel"
                android:textColor="#fff"
                android:onClick="onButtonCancelClicked"
                android:layout_weight=".3"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Save"
                android:textColor="#fff"
                android:onClick="onButtonSaveClicked"
                android:layout_weight=".3"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimaryDark"
                android:elevation="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Delete"
                android:textColor="#fff"
                android:onClick="onButtonDeleteClicked"
                android:layout_weight=".3"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
